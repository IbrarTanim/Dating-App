    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:foreground="@drawable/demoeffcir"
        android:longClickable="true"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:clickable="true"
            android:foreground="@drawable/demoeffcir"
            android:longClickable="true">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/viewProfile"
                android:layout_width="165dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/masud"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:riv_border_color="#FFFFFF"
                app:riv_border_width="2dip"
                app:riv_corner_radius="15dp"
                app:riv_mutate_background="true" />

            <ImageView
                android:id="@+id/audiocallBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_cir"
                android:backgroundTint="#00FF0A"
                android:clickable="true"
                android:foreground="@drawable/buttoneffcir"
                android:longClickable="true"
                android:padding="5dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toStartOf="@+id/videocallsBtn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/phone_call"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/videocallsBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_cir"
                android:backgroundTint="@color/blue"
                android:clickable="true"
                android:foreground="@drawable/buttoneffcir"
                android:longClickable="true"
                android:padding="5dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/audiocallBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/audiocallBtn"
                app:layout_constraintTop_toTopOf="@+id/audiocallBtn"
                app:srcCompat="@drawable/videocall"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/viewProfile"
                app:layout_constraintStart_toStartOf="@+id/viewProfile"
                app:layout_constraintTop_toBottomOf="@+id/viewProfile" />

            <TextView
                android:id="@+id/onlinetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/bree_serif"
                android:text="Online"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/bluBtn"
                app:layout_constraintEnd_toStartOf="@+id/bluBtn"
                app:layout_constraintTop_toTopOf="@+id/bluBtn" />

            <ImageView
                android:id="@+id/bluBtn"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/blucercle"
                android:padding="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.93"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/viewProfile"
                app:layout_constraintVertical_bias="0.060000002"
                app:srcCompat="@drawable/dot" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>