    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:foreground="@drawable/buttoneffcir"
        android:longClickable="true"
        android:scaleType="centerCrop"
        android:src="@drawable/plasholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bluBtn2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/blucercle"
        android:padding="2dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/circleProfile"
        app:layout_constraintEnd_toEndOf="@+id/circleProfile"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/circleProfile"
        app:layout_constraintVertical_bias="0.93"
        app:srcCompat="@drawable/dot"
        app:tint="#00FF0A" />

    <TextView
        android:id="@+id/cirName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/circleProfile"
        app:layout_constraintStart_toStartOf="@+id/circleProfile"
        app:layout_constraintTop_toBottomOf="@+id/circleProfile" />
</androidx.constraintlayout.widget.ConstraintLayout>