<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp"
    android:background="@color/white">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/header_layout"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:background="@color/button"/>

    <EditText
        android:id="@+id/bioEt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_cir"
        android:fontFamily="@font/bree_serif"
        android:foreground="@drawable/logineffcir"
        android:hint="Your Bio"
        android:padding="10dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_layout"
        android:maxLines="5"/>

    <Button
        android:id="@+id/SaveBTN"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/button_cir"
        android:clickable="true"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:longClickable="true"
        android:padding="8dp"
        android:text="Save"
        android:textSize="10sp"
        android:textStyle="bold"
        app:backgroundTint="@color/button"
        app:layout_constraintTop_toBottomOf="@+id/bioEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/canselBTN"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"/>

    <Button
        android:id="@+id/canselBTN"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/create_button_cir"
        android:clickable="true"
        android:fontFamily="@font/bree_serif"
        android:gravity="center"
        android:longClickable="true"
        android:padding="8dp"
        android:text="Cancel"
        android:textColor="#9C9C9C"
        android:textSize="10sp"
        android:textStyle="bold"
        app:backgroundTint="#F2FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/bioEt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/SaveBTN"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>